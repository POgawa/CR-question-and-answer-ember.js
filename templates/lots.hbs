

<h3>Current Lots:</h3>

<ul class="lotlist">
{{#each}}

  <li>{{#link-to 'lot' this.id classNames="lot-title"}}{{title}}{{/link-to}}
    <ul>
      {{#each items}}
          {{#link-to 'item' this.id }}<li class='flat'><img src={{image}} class="img-thumbnail"></li>{{/link-to}}
      {{/each}}
    </ul>
  </li>
  <hr>
{{/each}}
</ul>

<p>{{#link-to 'new-lot' classNames="btn btn-primary"}}Add New Lot{{/link-to}}</p>
<p>Items List</p>
<ul>

  {{controllers.items.title}}
  {{#each controllers.items.model}}

    <li>{{title}}</li>
  {{/each}}
</ul>
